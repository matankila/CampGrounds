<% include partials/header %>

<div class="loginbox">
<form class="frm_comments" action="/logIn" method="POST">
    <h1>Log in</h1>
    <hr>
    <div style="display: block;margin-right: auto;margin-left: auto;" class="input-group mb-3">
    <input name="username" type="text" placeholder="username">
    </div>

    <div style="display: block;margin-right: auto;margin-left: auto;" class="input-group mb-3">
    <input name="password" type="password" placeholder="password">
    </div>
    
    
    <p class="eMsg"><%= eMsg %></p>
    <div style="display: block;margin-right: auto;margin-left: auto;margin-top: 73px;" class="input-group mb-3">
    <button class="btn btn-primary">Log in</button>
    </div>
</form>
</div>

<% include partials/footer %>